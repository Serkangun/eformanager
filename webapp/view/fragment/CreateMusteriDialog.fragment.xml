<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    
    <Dialog
        id="createMusteriDialog"
        title="Yeni Müşteri"
        contentWidth="600px">
        
        <content>
            <form:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false">
                
                <form:content>
                    
                    <!-- Müşteri Kodu -->
                    <Label text="Müşteri Kodu" required="true"/>
                    <Input
                        id="inputMusteriKodu"
                        placeholder="Örn: MSTR-001"
                        value="{createMusteri>/MusteriKodu}"
                        maxLength="20"/>
                    
                    <!-- Müşteri Adı -->
                    <Label text="Müşteri Adı" required="true"/>
                    <Input
                        id="inputMusteriAdi"
                        placeholder="Şirket adı girin"
                        value="{createMusteri>/MusteriAdi}"
                        maxLength="100"/>
                    
                </form:content>
            </form:SimpleForm>
        </content>
        
        <beginButton>
            <Button
                text="Kaydet"
                type="Emphasized"
                press="onSaveMusteri"/>
        </beginButton>
        
        <endButton>
            <Button
                text="İptal"
                press="onCancelMusteri"/>
        </endButton>
        
    </Dialog>
</core:FragmentDefinition>